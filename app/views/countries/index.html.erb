<% content_for :head do %>
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
	<script type="text/javascript">
	$(document).ready(function(){

		var latlng = new google.maps.LatLng(-0, 0);
		var myOptions = {
			zoom: 2,
			center: latlng,
			mapTypeId: google.maps.MapTypeId.ROADMAP
		};
		
		console.log("creating map");
		var map = new google.maps.Map(document.getElementById("advice_map"),myOptions);


	});


	</script>
<% end %>


<h1>Places with a current Foreign Office Warning</h1>

<ul>
<% @countries.each do |country| %>
	<li><%= country.name %> - <%= country.travel_advice %> - <%= country.updated_at.to_date.to_s %></li>
<% end %>
</ul>


<div id="advice_map"></div>